/* ==========================================================================
   Media Queries
   ========================================================================== */

@media only screen and (min-width: 768px) {

/* ====================
    WIDE: CSS3 Effects
   ==================== */

    .header-container,
    .main aside,
    .main article{
        -webkit-box-shadow: 6px 6px 0px matte;
           -moz-box-shadow: 6px 6px 0px matte;
                box-shadow: 6px 6px 0px matte;
        opacity: 0.85;
        left: 0;
        top:0;
        position:relative;
    }
    .header-container,
    .main aside,
    .main article,
    .footer-container,
    .csstransitions body,
    .csstransitions aside{
        -webkit-transition: .35s all ease-in-out;
           -moz-transition: .35s all ease-in-out;
                transition: .35s all ease-in-out;
    }

    .csstransitions aside.hide{
        position: relative;
        opacity: 0;
        left: 130px;
        top: -60px;
        transform:rotate(-6deg);
    }
    .csstransitions aside.show{
        opacity: 1;
        left:0;
        top:0;
        transform:rotate(0deg);
    }
    .header-container:hover,
    .main aside:hover,
    .main article:hover,
    .main article.active,
    .main aside.active
    {
        opacity: 1;
        top:4px;
    }



    .csstransitions .footer-container{
        height: 0;
        overflow: hidden;
    }

    .csstransitions body{
        opacity: 0;
    }

    .csstransitions body.active{
        opacity: 1;
    }

    .csstransitions .footer-container.up{
        min-height: 100px;
    }



/* ============
    WIDE: Menu
   ============ */

    .title {
        float: left;
    }

    nav {
        float: right;
        width: 38%;
    }

/* ============
    WIDE: Main
   ============ */

    .main article {
        float: left;
        width: 70%;
    }

    .main aside {
        float: right;
        width: 16%;
    }
}

