.shrimpContainer {
    width: 100%;
    height: 40px;
    display: block;
    overflow: hidden;
    position: absolute;
    bottom:100px;
    display: none;
}

.shrimpBox {
    position:absolute;
    top:0;
    left:-20%;
    -webkit-animation: shrimpMove 16s;
    -webkit-animation-iteration-count: 1;
    -webkit-animation-timing-function:linear;
}


.shrimp {
    position:absolute;
    top:0px;
    left:0px;
    -webkit-animation: shrimpBounce 0.35s;
    -webkit-animation-iteration-count: infinite;
    -webkit-animation-timing-function:ease-in-out;
