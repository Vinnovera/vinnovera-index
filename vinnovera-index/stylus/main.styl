.wrapper
    width 90%
    margin 0 5%

/* ===================
    ALL: Orange Theme
   =================== */

.header-container
    border-bottom 20px solid #000

.main aside
    border-top 20px solid #000

.header-container,
.main aside {
    background: accent;
}

.title {
    color: white;
}

/* ==============
    MOBILE: Menu
   ============== */

nav ul {
    margin: 0;
    padding: 0;
}

nav a {
    display: block;
    margin-bottom: 10px;
    padding: 15px 0;

    text-align: center;
    text-decoration: none;
    font-weight: bold;

    color: white;
    background: #e44d26;
}

nav a:hover,
nav a:visited {
    color: white;
}

nav a:hover {
    text-decoration: underline;
}

a,
a:hover,
a:visited{
    color: #000;
}



/* ==============
    MOBILE: Main
   ============== */

.main {
    padding: 30px 0;
}
.main article{
    border: 1px solid matte;
    background-image: url('../img/logoSymbolBlack.png');
    background-repeat: no-repeat;
    background-position: 50% 8%;
    padding-top: 100px;
    background-color: matte-light;
}
.main article h1 {
    font-size: 2em;
}
.main article section {
    padding: 2% 4% 20px;
    background: #fff;
}

.main article section ul{
    list-style-type: square;
    font-size: 1.4em;
}

.main article section ul li{
    color: accent;
}

.main article section ul li a{
    color: accent;
    text-decoration: none;
}

.main article section ul li a:hover{
    text-decoration: underline;
}

.main aside {
    color: white;
    padding: 0px 5% 10px;
}

.footer-container{
    position: absolute;
    bottom:0;
    opacity: 0.5;
    width: 100%;
    background: matte;
    border-top: 1px solid #ddd;
    overflow: hidden;
}
.footer-container:hover{
    opacity: 1;
}
.footer-container footer {
    color: #222;
    padding: 20px 0;

}

/* ===============
    ALL: IE Fixes
   =============== */

.ie7 .title {
    padding-top: 20px;
}

