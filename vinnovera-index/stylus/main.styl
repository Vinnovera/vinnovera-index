   Author's custom styles
   ========================================================================== */

.remodal-overlay{
    background: white;
    background: rgba(120, 120, 120, 0.5);
}

.remodal *{
    font-family: 'Roboto Slab', Helvetica, Helvetica Neue, sans-serif;
}

.remodal{
    border-radius: none!important;
    -webkit-border-radius: none!important;
    background: #fff;
    max-width: 800px!important;
    padding: 40px 0px;
    text-align: left;
        -webkit-box-shadow: 6px 6px 0px matte;
           -moz-box-shadow: 6px 6px 0px matte;
                box-shadow: 6px 6px 0px matte;
}

.remodal-close:hover, .remodal-close:active {
    background: black;
}
.remodal-close {
    border-color: white;
    left: auto;
    right:5px;
    text-align: center;
}

.remodal-close:after {
    color: black;
}

.remodal-confirm {
    border: none;
    background: #000;
    color: #fff!important;
    -webkit-border-radius:3px;
    border-radius: 3px;
            -webkit-box-shadow: 6px 6px 0px matte;
           -moz-box-shadow: 6px 6px 0px matte;
                box-shadow: 6px 6px 0px matte;
    margin: 0 auto;
    display: block;
}

.remodal-confirm:hover {
    background: #333;
}

