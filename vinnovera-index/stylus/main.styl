@-webkit-keyframes shrimpSwim {
    from {
        width:2px;
        height:9px;
        border-radius:0;
        -webkit-transform: rotate(5deg);
        border-color: transparent #f95e5e transparent transparent;
    }
    to {
        width:4px;
        height:8px;
        border-radius:50%;
        -webkit-transform: rotate(45deg);
        border-color: #f95e5e #f95e5e transparent transparent;
    }
}

@-webkit-keyframes shrimpBounce {
    from {
        margin-left:0px;
    }
    to {
        margin-left:20px;
    }
}


@-webkit-keyframes shrimpMove {
    from {
        left:-20%;
    }
    to {
        left:120%;
    }
}